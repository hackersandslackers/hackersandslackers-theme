{{!< default}}
{{#post}}
  <div class="post-wrapper">
    <main id="site-main">
      <article class="post {{post_class}}">
        <header class="post-header">
          {{!-- Post Image --}}
          {{#if feature_image}}
            <div class="post-image">
              <img src="{{img_url feature_image}}"
                alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" />
              {{#if feature_image_caption}}
                <figcaption>{{feature_image_caption}}</figcaption>
              {{/if}}
            </div>
          {{/if}}
          <div class="post-header-details">
            <h1 class="post-title">{{title}}</h1>
            {{#if custom_excerpt}}
              <p class="post-excerpt">{{custom_excerpt}}</p>
            {{/if}}
            {{!-- Post Meta --}}
            <div class="post-meta">
              {{#primary_author}}
                <div class="post-meta-item link">
                  <i class="fa-sharp fa-solid fa-user-pen"></i>
                  <a href="{{url}}" class="author-name">{{name}}</a>
                </div>
              {{/primary_author}}
              {{#primary_tag}}
                <div class="post-meta-item link">
                  <i class="fa-sharp fa-solid fa-tag"></i>
                  <a href="{{url}}">{{name}}</a>
                </div>
              {{/primary_tag}}
              <div class="post-meta-item">
                <i class="fa-sharp fa-solid fa-calendar"></i>
                <time datetime="{{date format="YYYY-MM-DD"}}">{{date}}</time>
              </div>
              {{#if reading_time}}
                <div class="post-meta-item">
                  <i class="fa-sharp fa-solid fa-eye"></i>
                  <span class="reading-time">{{reading_time}}</span>
                </div>
              {{/if}}
            </div>
            {{!-- Post Series TOC --}}
            {{> "series/toc" }}
          </div>
        </header>
        <section class="post-content">
          {{content}}
        </section>
        {{> "post/post-tags"}}
        {{!--

          This is currently not possible with Ghost's dynamic routing. See discussion:
          https://forum.ghost.org/t/dynamic-routing-for-next-previous-post-helper/9279

          {{> "series/nextprev" }}

        --}}
        {{> "post/author-info"}}
      </article>
    </main>
  </div>
  {{!-- Post Footer --}}
  <div class="post-after">
    <div class="post-after-wrapper">
      {{> "post/post-comments"}}
      {{> "post/support" }}
      {{!-- The {#get} helper below fetches some of the latest posts here
      so that people have something else to read when they finish this one.

      This query gets the latest 3 posts on the site, but adds a filter to
      exclude the post we're currently on from being included. --}}
      <section class="related-posts">
        {{#get "posts" filter="id:-{{id}}" limit="3" as |more_posts|}}
          {{#if more_posts}}
            {{#foreach more_posts}}
              {{> "post-card"}}
            {{/foreach}}
          {{/if}}
        {{/get}}
      </section>
    </div>
  </div>
{{/post}}