{{!< default}} {{#page}} <div class="series-detail">

  {{#if feature_image}}
  <figure class="page-image">

    <img class="series-feature-image" srcset="{{img_url feature_image size=" s"}} 300w, {{img_url feature_image size="m"
      }} 600w, {{img_url feature_image size="l" }} 1000w, {{img_url feature_image size="xl" }} 2000w"
      sizes="(min-width: 1400px) 1400px, 92vw" src="{{img_url feature_image size=" xl"}}"
      alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" />
    {{/if}}

    <h1 class="series-title">{{title}}</h1>

    <div class="post-content">
      {{content}}
    </div>

    {{#get "posts" filter="tags:[{{slug}}]" include="tags" order="published_at asc" limit="all"}}
    {{#foreach posts}}
    <a class="series-post-card" href="{{url}}">
      <div class="series-post-number">{{@number}}</div>
      <div class="series-post-card-detail">
        <h2 class="series-post-card-title">{{title}}</h2>
        <div class="excerpt">{{excerpt}}</div>
        <div class="reading-time"><i class="fa-sharp fa-solid fa-clock"></i> <span>{{reading_time}}</span></div>
      </div>
    </a>
    {{/foreach}}
    {{/get}}

    </div>

    {{/page}}