<nav class="mobile-menu" aria-label="Mobile menu">

  <ul class="mobile-menu-links">

    <li class="nav-home mobile-nav-link">
      <a href="{{@site.url}}">Home</a>
    </li>

    {{#foreach navigation}}
      {{#has slug="tags"}}
        {{> "menus/mobile-menu-tags-subnav"}}
          <li class="{{link_class for=(url) class=(concat "mobile-nav-link nav-" slug)}}">
            <a href="{{url absolute="true"}}" title="{{name}}">{{label}}</a>
          </li>
      {{/has}}
      {{#has slug="series"}}
        {{> "menus/mobile-menu-series-subnav"}}
          <li class="{{link_class for=(url) class=(concat "mobile-nav-link nav-" slug)}}">
            <a href="{{url absolute="true"}}" title="{{name}}">{{label}}</a>
          </li>
      {{/has}}
      </li>
    {{/foreach}}
    </ul>

    <div class="gh-navigation-actions">
            {{#unless @site.members_enabled}}
                {{^match navigationLayout "Stacked"}}
                    {{> "search-toggle"}}
                {{/match}}
            {{else}}
                {{> "search-toggle"}}
                <div class="gh-navigation-members">
                    {{#unless @member}}
                        {{#unless @site.members_invite_only}}
                            <a href="#/portal/signin" data-portal="signin">Sign in</a>
                            {{#unless hideSubscribeButton}}
                                <a class="gh-button" href="#/portal/signup" data-portal="signup">Subscribe</a>
                            {{/unless}}
                        {{else}}
                            <a class="gh-button" href="#/portal/signin" data-portal="signin">Sign in</a>
                        {{/unless}}
                    {{else}}
                        <a class="gh-button" href="#/portal/account" data-portal="account">Account</a>
                    {{/unless}}
                </div>
            {{/unless}}
        </div>
  
</nav>